<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_data_match_text"
        android:gravity="center"
        android:id="@+id/no_data__match_found"
        android:visibility="gone" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_view_layout"
        android:paddingRight="5dp">
        <android.support.v7.widget.SearchView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/search_view"
            app:iconifiedByDefault="false"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="@string/search_hint"/>
        <Button
            android:id="@+id/sort_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/filter_button"
            android:background="@android:drawable/ic_menu_sort_by_size" />

        <Button
            android:id="@+id/filter_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:foregroundGravity="center"
            android:background="@drawable/ic_filter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <!--<android.support.v7.widget.SearchView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/search_view"
        app:searchIcon="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/search_hint"/>

    <Button
        android:id="@+id/sort_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_view"
        android:src="@android:drawable/ic_menu_sort_by_size" />-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        app:layout_constraintTop_toBottomOf="@+id/search_view_layout"
        android:layout_gravity=""/>

</android.support.constraint.ConstraintLayout>
</layout>